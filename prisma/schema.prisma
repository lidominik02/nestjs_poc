generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  name  String
  email String
  eduID String

  Task Task[]
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  languages   String[]
  points      Int
  public      Boolean

  creator User   @relation(fields: [userId], references: [id])
  userId  String
}
